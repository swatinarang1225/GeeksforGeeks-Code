def Series(n):
    list = [3]
    for i in range(1,n):
        value = 7 + (i-1)*4
        append_val = value+list[i-1]
        list.append(append_val)
    print(list[n-1])
    return 0



if __name__ == "__main__":
    t = int(input())
    while(t>0):
        n = int(input())
        Series(n)
        t = t-1
